{
    "name": "kint-php/kint",
    "description": "Kint - debugging tool for PHP developers",
    "keywords": ["kint", "php", "debug"],
    "type": "library",
    "homepage": "https://kint-php.github.io/kint/",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan Vollebregt",
            "homepage": "https://github.com/jnvsor"
        },
        {
            "name": "Rokas Å leinius",
            "homepage": "https://github.com/raveren"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/kint-php/kint/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=5.1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "files": ["init.php"],
        "classmap": ["src/"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "npm install",
            "@clean",
            "@build"
        ],
        "clean": "rm -rf resources/compiled/",
        "format": [
            "@format:php",
            "@format:js",
            "@format:sass"
        ],
        "format:php": "php-cs-fixer fix",
        "format:js": "npm run format:js",
        "format:sass": "npm run format:sass",
        "build": [
            "@build:sass",
            "@build:js"
        ],
        "build:sass": "npm run build:sass",
        "build:js": "npm run build:js"
    }
}
