  "license": "MIT",
  "private": true,
  "devDependencies": {
    "eslint": "^3.0",
    "eslint-config-standard": "^7.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^2.0",
    "globstar": "^1.0",
    "uglify-js": "^3"
  },
  "scripts": {
    "format:js": "globstar -- eslint --fix \"resources/js/**/*.js\"",
    "build:js": "npm run build:js:rich && npm run build:js:rich_microtime",
    "build:js:rich": "uglifyjs resources/js/rich.js -cm --verbose --warn > resources/compiled/rich.js",
    "build:js:rich_microtime": "uglifyjs resources/js/rich_microtime.js -cm --verbose --warn > resources/compiled/rich_microtime.js"
  }
}
